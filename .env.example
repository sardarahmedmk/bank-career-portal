# Environment Variables for UBL JD Chatbot

# OpenAI API Configuration (Optional - for advanced AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Application Settings
APP_ENV=development
DEBUG_MODE=true

# Database Configuration (if using external database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ubl_jd_chatbot
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@ublbank.com
EMAIL_PASSWORD=your_email_password

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# External APIs
UBL_HR_API_URL=https://api.ublbank.com/hr
UBL_API_KEY=your_ubl_api_key

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Cache Settings
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Features Flags
ENABLE_AI_CHAT=true
ENABLE_ANALYTICS=true
ENABLE_PROFILE_MATCHING=true
ENABLE_EMAIL_NOTIFICATIONS=false
